# AvatarForge API Configuration

# Application
PROJECT_NAME=AvatarForge API
VERSION=0.1.0
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./avatarforge.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql://user:password@localhost/dbname

# Security
SECRET_KEY=your-secret-key-change-this-in-production
API_KEY_NAME=X-API-Key

# CORS
ALLOWED_ORIGINS=["*"]

# File Storage
STORAGE_PATH=./storage
MAX_FILE_SIZE=52428800  # 50MB in bytes
MAX_IMAGE_DIMENSION=4096
MIN_IMAGE_DIMENSION=64
FILE_CLEANUP_DAYS=30  # Delete orphaned files after N days

# Scheduled Tasks
ENABLE_SCHEDULER=True  # Enable APScheduler for automated cleanup jobs
CLEANUP_SCHEDULE_HOUR=2  # Hour (0-23) to run daily cleanup (2 AM by default)

# ComfyUI Backend
COMFYUI_URL=http://localhost:8188
