# AvatarForge API Configuration

# Application
PROJECT_NAME=AvatarForge API
VERSION=0.1.0
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./avatarforge.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql://user:password@localhost/dbname

# Security
SECRET_KEY=your-secret-key-change-this-in-production
API_KEY_NAME=X-API-Key

# CORS
ALLOWED_ORIGINS=["*"]

# File Storage
STORAGE_PATH=./storage
MAX_FILE_SIZE=52428800  # 50MB in bytes
MAX_IMAGE_DIMENSION=4096
MIN_IMAGE_DIMENSION=64
FILE_CLEANUP_DAYS=30  # Delete orphaned files after N days

# Scheduled Tasks
ENABLE_SCHEDULER=True  # Enable APScheduler for automated cleanup jobs
CLEANUP_SCHEDULE_HOUR=2  # Hour (0-23) to run daily cleanup (2 AM by default)

# ComfyUI Backend
COMFYUI_URL=http://localhost:8188

# Model Configuration (SDXL Checkpoints)
DEFAULT_CHECKPOINT=RealVisXL_V5.0.safetensors
REALISTIC_CHECKPOINT=RealVisXL_V5.0.safetensors
ANIME_CHECKPOINT=JuggernautXL_v10.safetensors

# Upscaler Configuration
PRIMARY_UPSCALER=RealESRGAN_x4plus.pth
SECONDARY_UPSCALER=4x-UltraSharp.pth
ENABLE_UPSCALING=True

# Quality Settings for Photorealism
DEFAULT_STEPS=30
REALISTIC_STEPS=35
DEFAULT_CFG=7.0
DEFAULT_SAMPLER=dpmpp_2m_sde_gpu
DEFAULT_SCHEDULER=karras
